<div class="container">
<div class="row">
<div class="col-md-3">
<h1>User info</h1>
<%= image_tag current_user.get_profile_image(100,100)%>

<th><h4>name</h4></th>
<th><%= current_user.name %></th>


<th><h4>introduction</h4></th>
<th><%= current_user.introduction %></th>

<th><%= link_to 'Edit User',edit_user_path(current_user) %></th>


<h1>New Book</h1>

<%= form_with model:@book,url:books_path, method: :post do |f|  %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<p><%= f.submit'Create Book' %></p>
<% end %>
</div>


<div class="col-md-8 offset-md-1">
<table class="table table-striped">
<h1>Books</h1>

<% @books.each do |book| %>

<tr>
<th><%= image_tag current_user.get_profile_image(100,100)%></th>
<th>Title</th>
<th><%= book.title %></th>

<th>Opinion<th>
<th><%= book.body %></th>
</tr>
<% end %>
</table>

</div>
</div>
</div>
