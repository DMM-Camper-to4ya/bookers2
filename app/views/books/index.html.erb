<%= render 'list', books:@book  %>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class='table table-hover table-inverse'>

<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion<th>
<th colspan="3"></th>
<% @books.each do |book| %>
<tbody>

<td>
<%= link_to book do %>
<%= image_tag current_user.get_profile_image(100,100) %>
<% end %>
</td>

<td>
<%= link_to book.title, book %>
</td>

<td><%= book.body %></td>
</tr>
<% end %>
</thead>
</tbody>
</table>

</div>
</div>
</div>
