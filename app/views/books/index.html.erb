<%= link_to "edit user",@book %>

<h1>New Book</h1>

<%= form_with model:@book,url:books_path,method: :post do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<p><%= f.submit'Create Book' %></p>
<% end %>

<h1>投稿一覧</h1>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span><%= book.title %></span>

  <p>本文</p>
  <span><%= book.body %></span>

<% end %>