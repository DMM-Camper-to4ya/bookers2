<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました
<ul>
<% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %>
<div class='container'>
<div class='row'>
<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
<tr>
<div class="form-group">
<label for="inputName">Title</label></br>
<%= f.text_field :title, autofocus: true, id:"Title"%>
</div>

<div class="form-group">
<label for="Opinion">Opinion</label></br>
<%= f.text_area :body, autofocus: true, id:"Body"%>
</div>
<%= f.submit "Update Book" %>
<% end %>

<%= link_to "Show",book_path %> |
<%= link_to "Back",books_path %>

</tr>