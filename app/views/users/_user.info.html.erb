<h2>User info</h2>

<tr>
<%= image_tag user.get_profile_image(100,100) %>
</tr>
<table class="table">
<tbody>
<tr>
<th>name</th>
<th><%= user.name %></th>
</tr>
<tr>
<th>introduction</th>
<th><%= user.introduction %></th>
</tr>
</tbody>
</table>
<%= link_to edit_user_path(user), class: "nav-link text-light" do %>
<div class="btn btn-outline-secondary btn-block">
<i class="fas fa-user-cog"></i>
<% end %>
</div>
