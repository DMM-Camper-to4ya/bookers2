<%= flash[:notice] %>
<div class='container px-5 px-sm-0'>
<div class="row">
<div class="col-md-3">
<%= render 'users/user.info',user:current_user %>
<%= render 'books/list', books:@book %>
</div>
<div class= 'col-md-8 offset-md-1'>
<h2>Users</h2>
<table class='table'>
<thead>
<tr>
<th>image</th>
<th>name</th>
<th></th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>
<tr>
<% @user.each do |user| %>
<td>
<%= link_to user do %>
<%= image_tag user.get_profile_image(100,100) %>
<% end %>
</td>

<td>
<%= user.name %>
</td>

<td>
<%= link_to "Show",user %>
</td>

</tr>
</tbody>
<% end %>
</table>
</div>
</div>
</div>
